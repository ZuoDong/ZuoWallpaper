<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context="net.markguerra.android.glwallpapertest.SettingsActivity">

    <GridView
        android:id="@+id/selected_images_gv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="3">
    </GridView>

    <Button
        android:id="@+id/selected_set_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="设置壁纸(设置一次即可)"
        android:textColor="@android:color/black"
        android:onClick="setWallpaper"/>
    <Button
        android:id="@+id/selected_clear_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="清除图片"
        android:textColor="@android:color/black"
        android:onClick="clearWallpaper"/>

</LinearLayout>
